<link href="https://fonts.googleapis.com/css2?family=Anonymous+Pro&display=swap" rel="stylesheet">
@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Criar</h2>

<h4 class="small-bold-text">Cliente</h4>
<hr />
<div class="small-bold-text">
    <div class="row justify-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Campos Email, Data de Nascimento e Celular na mesma linha -->

                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input type="date" asp-for="DataNascimento" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" oninput="formatarTelefone(this)" id="telefone" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <!-- Campo CNPJ/CPF ocupa toda a largura -->
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="CnpjCpf" class="control-label"></label>
                    <input asp-for="CnpjCpf" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="CnpjCpf" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="DataCadastro" class="form-control" />
            <input type="hidden" asp-for="CadastroAtivo" class="form-control" />

            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn" style="background-color: #B59879; border-color: #B59879; color: white; width: 10%;" />
            </div>
        </form>
    </div>
</div>

<div class="text-back">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



