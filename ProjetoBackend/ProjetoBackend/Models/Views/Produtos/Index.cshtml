@model IEnumerable<ProjetoBackend.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Produtos</h2>

<p>
    <a asp-action="Create" class="create-link">Criar Novo</a>
</p>
<table class="table custom-table-produto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="custom-row-produto">
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.ProdutoId" class="text-decoration-none edit-icon">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Deletar" asp-route-id="@item.ProdutoId" class="text-decoration-none delete-icon">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
