@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Criar";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Criar</h2>

<h4 class="small-bold-text">Compra</h4>
<hr />
<div class="small-bold-text">
    <form asp-action="Create" class="create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row">
            <div class="col-12">
                <div class="form-group mt-3">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" name="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId" style="background-color: #d9d9d9; border-color: #504742;"></select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="DataCompra" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />

        <div class="row">
            <div class="col-12">
                <div class="form-group mt-3">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group mt-3">
                    <input type="submit" value="Criar" class="btn" style="background-color: #B59879; border-color: #B59879; color: white; width: 10%;" />
                </div>
            </div>
        </div>

    </form>
</div>
<div class="text-back">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
