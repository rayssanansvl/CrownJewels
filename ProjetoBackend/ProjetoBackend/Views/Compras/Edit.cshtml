@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Editar";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Editar</h2>

<h4 class="small-bold-text">Compra</h4>
<hr />
<div class="small-bold-text">
    <div class="compra-create-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="compra-validation-summary text-danger mb-3"></div>

            <!-- Campo oculto para CompraId -->
            <input type="hidden" asp-for="CompraId" />

            <!-- Linha 1: Fornecedor e Data da Compra -->
            <div class="compra-row row mb-3">
                <div class="compra-form-group form-group col-md-8">
                    <label asp-for="FornecedorId" class="compra-label control-label"></label>
                    <select asp-for="FornecedorId" class="compra-select form-control compra-input-custom" asp-items="ViewBag.FornecedorId"></select>
                    <span asp-validation-for="FornecedorId" class="compra-validation text-danger"></span>
                </div>
                <div class="compra-form-group form-group col-md-4">
                    <label asp-for="DataCompra" class="compra-label control-label"></label>
                    <input asp-for="DataCompra" class="compra-input form-control compra-input-custom" />
                    <span asp-validation-for="DataCompra" class="compra-validation text-danger"></span>
                </div>
            </div>

            <!-- Linha 2: Valor Total -->
            <div class="compra-row row mb-4">
                <div class="compra-form-group form-group col-md-12">
                    <label asp-for="ValorTotal" class="compra-label control-label"></label>
                    <input asp-for="ValorTotal" class="compra-input form-control compra-input-custom" />
                    <span asp-validation-for="ValorTotal" class="compra-validation text-danger"></span>
                </div>
            </div>

            <!-- Botão Salvar e Link Voltar abaixo com espaçamento -->
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn" style="background-color: #B59879; border-color: #B59879; color: white; width: 10%;" />
            </div>
            <div class="text-back">
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




