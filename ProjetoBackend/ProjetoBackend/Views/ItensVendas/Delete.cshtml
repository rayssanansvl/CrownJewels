@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Deletar";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Deletar</h2>

<h4 class="small-bold-text">Tem certeza que deseja excluir isto?</h4>
<div>
    <hr />
    <dl class="row" style="background-color: #b59879; color: white; width: 100%; margin-bottom: 70px; border-width: 10px; border-style: solid; border-color: #b59879;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.VendaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <!-- Passar o ItemVendaId para o controlador -->
        <input type="hidden" name="ItemVendaId" value="@Model.ItemVendaId" />

        <input type="submit" value="Deletar" class="btn" style="background-color: #FF0400; color: white; width: 120px; margin-right: 10px;" />
        <a asp-action="Index" asp-route-id="@Model.ItemVendaId" style="color: #504742; text-decoration: none; margin-left: 10px;">Voltar</a>
    </form>
</div>
