@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Editar";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Editar</h2>

<h4 class="small-bold-text">ItemVenda</h4>
<hr />
<div class="venda-create-container">
    <div class="small-bold-text">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="venda-validation-summary text-danger mb-3"></div>

            <!-- Campo oculto para ItemVendaId -->
            <input type="hidden" asp-for="ItemVendaId" />

            <!-- Linha 1: Venda e Produto -->
            <div class="venda-row row mb-3">
                <div class="venda-form-group form-group col-md-8">
                    <label asp-for="VendaId" class="venda-label control-label"></label>
                    <select asp-for="VendaId" class="venda-select form-control venda-input-custom" asp-items="ViewBag.VendaId"></select>
                    <span asp-validation-for="VendaId" class="venda-validation text-danger"></span>
                </div>
                <div class="venda-form-group form-group col-md-4">
                    <label asp-for="ProdutoId" class="venda-label control-label"></label>
                    <select asp-for="ProdutoId" class="venda-select form-control venda-input-custom" asp-items="ViewBag.ProdutoId"></select>
                    <span asp-validation-for="ProdutoId" class="venda-validation text-danger"></span>
                </div>
            </div>

            <!-- Linha 2: Quantidade e Valor Unitário -->
            <div class="venda-row row mb-4">
                <div class="venda-form-group form-group col-md-8">
                    <label asp-for="Quantidade" class="venda-label control-label"></label>
                    <input asp-for="Quantidade" class="venda-input form-control venda-input-custom" />
                    <span asp-validation-for="Quantidade" class="venda-validation text-danger"></span>
                </div>
                <div class="venda-form-group form-group col-md-4">
                    <label asp-for="ValorUnitario" class="venda-label control-label"></label>
                    <input asp-for="ValorUnitario" class="venda-input form-control venda-input-custom" />
                    <span asp-validation-for="ValorUnitario" class="venda-validation text-danger"></span>
                </div>
            </div>

            <!-- Linha 3: Valor Total -->
            <div class="venda-row row mb-4">
                <div class="venda-form-group form-group col-md-12">
                    <label asp-for="ValorTotal" class="venda-label control-label"></label>
                    <input asp-for="ValorTotal" class="venda-input form-control venda-input-custom" disabled />
                    <span asp-validation-for="ValorTotal" class="venda-validation text-danger"></span>
                </div>
            </div>

            <!-- Botão Salvar e Link Voltar abaixo com espaçamento -->
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn" style="background-color: #B59879; border-color: #B59879; color: white; width: 10%;" />
            </div>
            <div class="text-back">
                <a asp-action="Index" asp-controller="ItensVendas">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
