@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Edit";
}

<h2 class="m-0 p-0 mt-5 fw-bold" style="text-shadow:0 4px 4px rgba(0,0,0,0.25);color:#504742">Editar</h2>

<h4 class="small-bold-text">Serviço</h4>
<hr />
<div class="small-bold-text">
    <div class="create-container">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="form-group col-md-7">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control create-input" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="ValorServico" class="control-label"></label>
                    <input asp-for="ValorServico" class="form-control create-input" style="background-color: #d9d9d9; border-color: #504742;" />
                    <span asp-validation-for="ValorServico" class="text-danger"></span>
                </div>
            </div>

            <!-- Add extra margin to move the buttons further down -->
            <div class="form-group mt-5">
                <input type="submit" value="Salvar" class="btn" style="background-color: #B59879; border-color: #B59879; color: white; width: 10%;" />
            </div>
        </form>
    </div>
</div>

<div class="text-back mt-2">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
